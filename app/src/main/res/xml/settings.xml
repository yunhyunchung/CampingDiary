<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="notification"
        app:title="알림설정">
        <SwitchPreference
            app:key="noti_sound"
            app:title="소리 알림"
            android:summary="소리로 알림을 받습니다."/>
    </PreferenceCategory>

    <PreferenceCategory
        app:key="etc"
        app:title="기타 설정">
        <EditTextPreference
            app:key="id"
            app:title="ID 설정"
            android:summary="닉네임을 설정합니다."/>
        <ListPreference
            app:key="textColor"
            android:title="글자색 선택"
            android:summary="글자색을 변경합니다."
            android:entries="@array/my_text_color"
            app:entryValues="@array/my_textColor_value"/>
        <ListPreference
            app:key="color"
            app:title="배경색 선택"
            android:summary="홈 화면 배경색을 설정합니다."
            android:entries="@array/my_color"
            app:entryValues="@array/my_color_value" />
    </PreferenceCategory>
</PreferenceScreen>